!!! 5
%html
  %head
    %title Fullscreen Maps
    %meta{ :name=>"viewport", :content=>"initial-scale=1.0, user-scalable=no" }
    %script{ :src=>"http://maps.google.com/maps/api/js?sensor=true", :type=>"text/javascript" }
    %script{ :src=>"js/map.js", :type=>"text/javascript" }
    %link{ :rel=>"stylesheet", :href=>"css/map.css", :type=>"text/css" }

  %body{ :onload=>"loadMap('map')" }
    %div{:id=>"body_div"}
    %div{:id=>"map"}
    %div{ :id=>"search_box"}
      %form{ :onsubmit=>'search(document.getElementById("search_address").value);', :action=>"javascript:void(0);" }
        %input{ :type=>"text", :id=>"search_address" }
        %input{ :type=>"submit", :value=>"Search" }
